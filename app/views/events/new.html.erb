<h1><i>Book Your Shows!</i></h1>
<h2>New Events</h2>
<div class="form">
<%= form_with model: @event do |f| %>

  <div>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div><br>

  <div>
    <%= f.label :start_time %><br>
    <%= f.datetime_field :start_time %>
  </div><br>

  <div>
    <%= f.label :end_time %><br>
    <%= f.datetime_field :end_time %>
  </div><br>
    
  <div>
    <%= f.label :location_id %><br>
    <%= collection_select( :event, :location_id , Location.all, :id, :name) %>
  </div><br>

  <div>
    <%= f.label :category_id %><br>
    <%= collection_select( :event, :category_id , Category.all, :id, :name ) %>
  </div><br>

  
  <%= f.submit 'submit' %>
  <% end %>  
</div>


